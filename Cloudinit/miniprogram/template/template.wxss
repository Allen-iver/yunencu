/* 黑底半透明提示框 */
#black-prompt {
  width: 410rpx;
  position: fixed;
  z-index: 9999;
  top: 500rpx;
  left: 0;
  right: 0;
  padding: 68rpx 20rpx;
  margin: auto;
  font-size: 36rpx;
  background: rgba(0,0,0, 0.7);
  text-align: center;
  color: white;
  border-radius: 5rpx;
}

/* 确认取消提示框 */
#popup-window {
  position: fixed;
  border: 1px solid #f6f5fa;
  left: 5%;
  width: 90%;
  text-align: center;
  border-radius: 50rpx;
  background-color: #f6f5fa;
  color: #070707;
  top: 30%;
  font-size: 32rpx;
  z-index: 400;
}

#popup-window .title {
  margin-top: 40rpx;
}

#popup-window .content {
  width: 80%;
  margin: 0 auto;
  word-break: break-all;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

#popup-window .confirm-cancel {
  border-top: 1rpx solid #e8e8e9;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

#popup-window .cancel, #popup-window .fonfirm {
  width: 50%;
  padding: 30rpx 0 30rpx 0;
}

#popup-window .fonfirm {
  color: #b30053;
}

#popup-window .cancel {
  color: #4b4b4b;
}

#popup-window .line {
  border: 0.5rpx solid #e8e8e9;
  height: 65rpx;
}

#mask {
  width: 100%;
  height: 100%;
  background-color: #070707;
  position: fixed;
  z-index: 200;
  top: 0;
  left: 0;
  opacity: 0.5;
}

/* 白底提示框 */

#white-ground {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

#white-ground .wg-box {
  padding: 70rpx;
  background-color: white;
  position: absolute;
  top: 170rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 500rpx;
  z-index: 10;
  border-radius: 15rpx;
}

#white-ground .title {
  text-align: center;
  color: #fd595a;
  font-size: 32rpx;
  font-weight: bold;
  display: block;
}

#white-ground .prompt-info {
  margin-bottom: 50rpx;
  display: block;
  font-size: 26rpx;
}

#white-ground .prb-click {
  position: absolute;
  bottom: -40rpx;
  right: 0;
  left: 0;
  margin: auto;
  width: 210rpx;
}

#white-ground .bg {
  position: absolute;
  z-index: 5;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.5;
}
/* 暂无数据 */
#no-data{
  position: absolute;
  right: 0;
  left: 0;
