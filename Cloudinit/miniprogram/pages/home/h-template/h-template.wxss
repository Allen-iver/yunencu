#index_page {
  width: 100%;
  height: auto;
}

/* 顶部轮播图 */

#top-banner {
  background-color: white;
  position: relative;
}

#top-banner swiper {
  position: absolute;
  left: 0;
  top: 0;
  height: 391rpx;
  width: 100%;
  z-index: 10;
}

#top-banner image {
  width: 100%;
  height: 100%;
}

#top-banner .search_goods {
  width: 674rpx;
  height: 60rpx;
  border-radius: 36rpx;
  background-color: #f1f4f4;
  position: absolute;
  left: 50%;
  margin-left: -337rpx;
  top: 12rpx;
  z-index: 12;
  text-align: left;
}

#top-banner .search_goods .search_input {
  display: block;
  width: 100%;
  height: 100%;
  border: 1px solid red;
  position: absolute;
}



#top-banner .search_goods .search_input image {
  width: 26rpx;
  height: 28rpx;
  display: inline-block;
  position: absolute;
  left: 40rpx;
  top: 16rpx;
  /* vertical-align: middle;
  margin-left: 30rpx;
  margin-right: 20rpx; */
}

/* placeholder默认颜色,大小 */
#top-banner .search_goods .place-holder {
  color: #585858;
  font-size: 28rpx;
  text-align: center;
}
