/* pages/my/my-template/my-template.wxss */
/* 用户信息#user-info-01 */
#user-info-01{
  height: 335rpx;
  position: relative;
  text-align: center;
}
#user-info-01 .ui-box{
  display: inline-block;
  margin-top: 12rpx;
}
#user-info-01 .ui-box .u-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  z-index: 10;
}
#user-info-01 .ui-box .u-name{
  color: white;
  font-size: 30rpx;
  z-index: 10;
  margin-top: 0rpx;
}
#user-info-01 .ug-box{padding: 23rpx 33rpx 20rpx 33rpx;border-top: 2rpx solid rgb(153,153,153);color: white;}
#user-info-01 .user-growth .ug-box:nth-child(2){border-right: 2rpx solid rgb(153,153,153);border-left: 2rpx solid rgb(153,153,
153);}
#user-info-01 .user-growth .df-fw-w{position: absolute;bottom: 0;}
/* 功能导航#nav-bar-01 */
#nav-bar-01{
  margin-top: 50rpx;
  padding: 0 70rpx;
}
#nav-bar-01 .top-share{
  text-align: center;
  background-color: #FC8E20;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  border-radius: 15rpx;
}
#nav-bar-01 .nav-list .nav-title{
  text-align: center;
  position: relative;
  font-size: 32rpx;
  
}
#nav-bar-01 .nav-list .nav-title::before{
  content: '';
  position: absolute;
  width: 35%;
  height: 3rpx;
  background-color:black;
  left: 0;
  bottom: 8rpx;
}
#nav-bar-01 .nav-list .nav-title::after{
  content: '';
  position: absolute;
  width: 35%;
  height: 3rpx;
  background-color:black;
  bottom: 8rpx;
  right: 0;
}
#nav-bar-01 .nav-functions{
  padding: 35rpx 0 15rpx 0;
}
#nav-bar-01 .nav-functions-box{
  text-align: center;
  width: 150rpx;
  line-height: 70rpx;
}
#nav-bar-01 .nav-functions-box image{
  width: 70rpx;
  height: 70rpx;
}
#nav-bar-01 .nav-functions-boxs{
  margin-left: 45rpx;
  padding: 13rpx 0;
}
#nav-bar-01 .nav-functions-boxs image{
  width: 39rpx;
  height: 38rpx;
  margin-right: 30rpx;
}
#nav-bar-01 .technical-support{margin-top: 20rpx;margin-bottom: 20rpx;}
/* 分享二维码 */
#my-share{width: 100%;height: 100%;position: absolute;top: 0;left: 0;}
#my-share .hint{position: fixed;z-index: 2000;color: white;font-size: 32rpx;text-align: center;width: 100%;top: 300rpx;}
#my-share image{width: 250rpx;height: 250rpx;position: absolute;right: 0;left: 0;top: 300rpx;margin: 0 auto;z-index: 1000;}
#my-share .hint .i-see{margin-top: 50rpx;}

/* 推送默认样式 */
button.form_button{background-color:transparent;padding:0;margin:0;display:inline;position:static;border:0;padding-left:0;padding-right:0;border-radius:0;font-size:0rpx;color:transparent;}
button.form_button::after{content:'';width:0;height:0;-webkit-transform:scale(1);transform:scale(1);display:none;background-color:transparent;}