/* pages/classify/classify-template/classify-template.wxss */
/* #classify-01*/
#classify-01{height: 100%;}
#classify-01 .classify-info{height: 92%;border-top: 4rpx solid rgb(181,178,178);}
/* #search-01搜索栏  */
#search-01{height: 8%;line-height: 8%;background-color: rgb(252,142,32);}
#search-01 label{font-size: 36rpx;color: white;font-weight: bold;}
#search-01 input{background-color: white;height: 51rpx;border-radius: 10rpx;width: 400rpx;}
#search-01 .search-input{position: relative;width: 490rpx;padding-left: 90rpx;background-color: white;border-radius: 10rpx;}
#search-01 .search-input image{width: 32rpx;height: 32rpx;position: absolute;left: 27rpx;top: 0;bottom: 0;z-index: 10;margin: auto;}
/* #classify-01左侧分类栏 */
#classify-01 #left-classify-01{width: 25%;text-align: center;height: 100%;box-sizing: border-box;}
#classify-01 #left-classify-01 scroll-view{height: 100%;border-right: 4rpx solid rgb(181,178,178);}
#classify-01 #left-classify-01 .lc-box{height: 77rpx;line-height: 77rpx;border-bottom: 2rpx solid rgb(181,178,178);box-sizing: border-box;}
#classify-01 #left-classify-01 .query-classify{position: relative;background-color: rgb(239,239,239);}
#classify-01 #left-classify-01 .query-classify::after{content: ''; position: absolute;width: 8rpx;height: 100%;background-color: rgb(249,194,95);left: 0;}
/* #right-goods-info-01右侧商品信息 */
#right-goods-info-01{width: 75%;padding-bottom: 37rpx;}
#right-goods-info-01 scroll-view{width: 489rpx;margin: 0 auto;height: 100%;}
#right-goods-info-01 scroll-view .rgi-box{text-align: center;line-height: 60rpx;word-break: break-all;}
#right-goods-info-01 scroll-view .rgi-box .info{margin-right: 30rpx;margin-top: 49rpx;width: 109rpx;}
#right-goods-info-01 scroll-view .rgi-box .info:nth-child(3n+0){margin-right: 0;}
#right-goods-info-01 scroll-view .rgi-box .info image{width: 100%;height: 139rpx;}
#right-goods-info-01 scroll-view .rgi-box::after{content: '';width: 109rpx;height: 139rpx;}
/* #right-goods-info-02右侧商品信息 */
#right-goods-info-02{width: 75%;padding-bottom: 37rpx;}
#right-goods-info-02 scroll-view{width: 489rpx;margin: 0 auto;height: 100%;}
#right-goods-info-02 .more{padding: 0 29rpx 14rpx 29rpx;border-bottom: 2rpx solid rgb(198,197,197);font-size: 30rpx;}
#right-goods-info-02 .more .icon{width: 15rpx;height: 26rpx;margin-left: 14rpx;}
#right-goods-info-02 scroll-view .rgi-box{text-align: center;line-height: 60rpx;word-break: break-all;margin-top: 37rpx;}
#right-goods-info-02 scroll-view .rgi-box .info-box{margin-top: 30rpx;}
#right-goods-info-02 scroll-view .rgi-box .info image{width: 109rpx;height: 139rpx;}
#right-goods-info-02 scroll-view .rgi-box navigator{padding: 0 20rpx;}

/* 推送默认样式 */
button.form_button{background-color:transparent;padding:0;margin:0;display:inline;position:static;border:0;padding-left:0;padding-right:0;border-radius:0;font-size:0rpx;color:transparent;}
button.form_button::after{content:'';width:0;height:0;-webkit-transform:scale(1);transform:scale(1);display:none;background-color:transparent;}