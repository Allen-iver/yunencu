/* pages/classify/classify-template/classify-template.wxss */
.classify-01 { height: 100%; }
.classify-info{height: 92%;}

/* 搜索框 */
.searchHead { width: 100%; height: 88rpx; background-color: #ffffff; margin: 0 auto; border-top: 2rpx solid #f7f7f7; border-bottom: 2rpx solid #f7f7f7; }
.searchHead .search_t { width: 670rpx; height: 60rpx; line-height: 60rpx; margin: 0 auto; margin-top: 14rpx; background-color: #f7f7f7; border-radius: 36rpx; position: relative; }
.searchHead .search_t .search_input { width: 570rpx; height: 60rpx; line-height: 60rpx; text-align: center; color: #585858; font-size: 28rpx; margin: 0 auto; }
.searchHead .search_t .place-holder {  color: #585858; font-size: 28rpx; }
.searchHead .search_t .search_img { width: 26rpx; height: 28rpx; position: absolute; left: 200rpx; top: 50%; margin-top: -14rpx; }

/* 左侧列表 */
#left-classify-menu { width: 200rpx; text-align: center; height: 100%; box-sizing: border-box; }
#left-classify-menu scroll-view { height: 100%; background-color: #f7f7f7;}
#left-classify-menu scroll-view .left-class-each { width: 100%; height: 100rpx; line-height: 100rpx; box-sizing: border-box; background-color: #f7f7f7; color: #7d7d7d; }
#left-classify-menu scroll-view .active-left-class { background-color: #ffffff; color: #b4282d; }

/* 右侧列表 */
.right-goods-list { width: 536rpx; height: auto; }
.right-goods-list scroll-view .each_list { width: 100%; height: auto; }
.right-goods-list scroll-view .each_list .each_list_title:nth-child(1) { margin-top: 10rpx;}
.right-goods-list scroll-view .each_list .each_list_title { font-size: 26rpx; color: #333333; margin-top: 30rpx; padding-left: 12rpx; margin-bottom: 40rpx;  }
.right-goods-list scroll-view .each_list .each_g_l { width: 100%; height: auto;}
.right-goods-list scroll-view .each_list .each_g_l .each-g-s { width: 30%; height: 178rpx;  text-align: center; position: relative; margin-bottom: 10rpx; }
.right-goods-list scroll-view .each_list .each_g_l .each-g-s text { width: 100%; font-size: 26rpx; color: #797979; position: absolute; left: 50%; margin-left: -50%; bottom: 6rpx; overflow: hidden;white-space: nowrap;text-overflow: ellipsis; }
.right-goods-list scroll-view .each_list .each_g_l .each-g-s image { width: 146rpx; height: 124rpx;  }







