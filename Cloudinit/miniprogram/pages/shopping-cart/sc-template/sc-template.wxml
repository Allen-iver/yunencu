<!--pages/shopping-car/sc-template/sc-template.wxml-->
<!-- 购物车shopping-car-01 -->
<import src='/template/template.wxml' />
<template name="shopping-cart-01">
  <template is="jianju" />
  <template is="top-shopping-list" />
  <template is="jianju" />
  <template is="is-goods-list" data="{{info}}" />
  <template is="bottom-calcu-price" data="{{info}}" />
  <view style="width: 100%; height: 102rpx;"></view>
</template>

<!-- 顶部商品列表 -->
<template name="top-shopping-list">
  <view class="shopping-store">
    <view class="store-name">
      <view class="store-son">
        <image class="store-name-s" src="/images/choose_goods_status_no.png"></image>
        <text class="store-name-c">千千商城</text>
      </view>
    </view>
    <view class="store-list">
      <view class="each-goods">
        <view class="e-left">
          <image class="status-img" src="/images/choose_goods_status.png"></image>
          <image class="goods-img" src="/images/goods01.png"></image>
        </view>
        <view class="e-middle">
          <text class="e-g-name">女士白色长颈鹿T恤</text>
          <text class="e-g-desc">黑色；s；200g</text>
          <text class="e-g-money">¥69.00</text>
        </view>
        <view class="e-right">
          <text class="e-g-count">数量：1</text>
          <view class="e-g-operat">
            <text class="e-g-add">-</text>
            <text class="e-g-num">1</text>
            <text class="e-g-subtract">+</text>
          </view>
        </view>
      </view>
    </view>
    <view class="store-list">
      <view class="each-goods">
        <view class="e-left">
          <image class="status-img" src="/images/choose_goods_status.png"></image>
          <image class="goods-img" src="/images/goods01.png"></image>
        </view>
        <view class="e-middle">
          <text class="e-g-name">女士白色长颈鹿T恤</text>
          <text class="e-g-desc">黑色；s；200g</text>
          <text class="e-g-money">¥69.00</text>
        </view>
        <view class="e-right">
          <text class="e-g-count">数量：1</text>
          <view class="e-g-operat">
            <text class="e-g-add">-</text>
            <text class="e-g-num">1</text>
            <text class="e-g-subtract">+</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</template>

<!-- 底部结算 -->
<template name="bottom-calcu-price">
  <view class="bottom-calcu-price">
    <view class="b-g-left">
      <image src="/images/choose_goods_status_no.png"></image>
      <text>全选</text>
    </view>
    <view class="b-g-mid">
      <view class="b-g-count">
        总计: <text>￥150.8</text>
      </view>
      <view class="b-g-discount">(满88包邮，已优惠¥20)</view>
    </view>
    <view class="b-g-right">结算(5)</view>
  </view>
</template>



